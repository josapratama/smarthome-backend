# ====================
# Server
# ====================
PORT=3000
NODE_ENV=development

# ====================
# Database
# ====================
# Format:
# postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/smarthome?schema=public"

# ====================
# Auth / JWT
# ====================
JWT_SECRET=change-me-in-production

# ====================
# MQTT (optional)
# ====================
MQTT_URL="mqtt://localhost:1883"
MQTT_USERNAME=admin
MQTT_PASSWORD=admin123

# ====================
# Public / App
# ====================
PUBLIC_BASE_URL="http://localhost:3000"

# ====================
# Storage
# ====================
STORAGE_DIR=storage

# ====================
# Command timeouts (ms)
# ====================
COMMAND_ACK_TIMEOUT_MS=5000
COMMAND_TIMEOUT_SWEEP_INTERVAL_MS=1000

# ====================
# Device offline detection (ms)
# ====================
DEVICE_OFFLINE_THRESHOLD_MS=5000
DEVICE_OFFLINE_SWEEP_INTERVAL_MS=1000

# ====================
# OTA
# ====================
OTA_TIMEOUT_MS=600000
OTA_SWEEP_INTERVAL_MS=30000
